{
  "apps" : [{
    "name"      : "goqnapcom",
    "script"    : "dist/server/server.js",
    "env": {
      "COMMON_VARIABLE": "true"
    },
    "env_production" : {
      "NODE_ENV": "production"
    }
  }],
  "deploy" : {
    "production" : {
      "key": "/c/Users/chche/.ssh/google_cloud_deploy_openSSH",
      "user" : "deploy",
      "host" : ["blog.qnap.com"],
      "ref"  : "origin/master",
      "repo" : "https://github.com/qqnc/goqnap.git",
      "path" : "/var/www/staging",
      "pre-setup": "sudo rm -rf /var/www/staging/source",
      "post-setup": "sudo npm install --unsafe-perm",
      "pre-deploy-local" : "echo 'This is a local executed command'",
      "pre-deploy" : "./node_modules/.bin/tsc -p tsconfig.json --module commonjs --sourceMap --target ES5",
      "post-deploy" : "sudo pm2 startOrRestart ecosystem.json --env production;sudo cp ../../qnapusa/public/ . -a; cp ~/.env ./; sudo chown -R deploy:deploy node_modules",
      "env"  : {
        "NODE_ENV": "production"
      }
    }
  }
}
