{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/",
    "sourceMap": true,
    "declaration": false,
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
    
  },
  "exclude":[
    "src/**",
    "ecosystem.config.js",
    "dist",
    "gulpfile.js",
    "public"
  ] 
}
